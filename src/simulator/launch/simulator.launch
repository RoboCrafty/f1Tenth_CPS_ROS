<?xml version="1.0"?>
<launch>

  <!-- Launch a map from the maps folder-->
  <arg name="map" default="$(find simulator)/maps/race_track.yaml"/>
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map)"/>

  <!-- Launch the racecar model -->
  <include file="$(find simulator)/launch/racecar_model.launch"/>

  <!-- Begin the simulator with the parameters from params.yaml -->
  <node pkg="simulator" name="simulator" type="simulator" output="screen">
    <rosparam command="load" file="$(find simulator)/params.yaml"/>
  </node>

  <!-- Launch the Keyboard Node -->
  <!-- Insert keyboard node declaration here. Have a look at the template below and follow the syntax. -->

  <!-- Node declaration template -->
  <!--
  <node pkg="simulator" name="new node's name" type="new file name" output="screen"/>
  -->

  <node pkg="simulator" name="keyboard_teleop" type="keyboard_teleop" output="screen"/>
  <node pkg="simulator" name="js_driver" type="js_driver" output="screen"/>

  <!-- Launch RVIZ -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find simulator)/launch/simulator.rviz" output="screen"/>
</launch>
